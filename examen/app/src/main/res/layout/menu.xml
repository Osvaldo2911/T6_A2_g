<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/menu"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EFE6E6">

    <Button
        android:id="@+id/btn_consultas_Menu"
        android:layout_width="170dp"
        android:layout_height="80dp"
        android:layout_marginTop="28dp"
        android:layout_marginEnd="16dp"
        android:onClick="acciones"
        android:text="Consultar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_agregar_Menu"
        tools:ignore="TouchTargetSizeCheck,TouchTargetSizeCheck" />

    <Button
        android:id="@+id/btn_modificar_Menu"
        android:layout_width="170dp"
        android:layout_height="80dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="28dp"
        android:layout_marginEnd="59dp"
        android:onClick="acciones"
        android:text="Modificar"
        app:layout_constraintEnd_toStartOf="@+id/btn_consultas_Menu"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_eliminar_Menu"
        tools:ignore="TouchTargetSizeCheck" />

    <Button
        android:id="@+id/btn_agregar_Menu"
        android:layout_width="170dp"
        android:layout_height="80dp"
        android:layout_marginTop="236dp"
        android:layout_marginEnd="16dp"
        android:onClick="acciones"
        android:text="Agregar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_eliminar_Menu"
        android:layout_width="170dp"
        android:layout_height="80dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="236dp"
        android:layout_marginEnd="59dp"
        android:onClick="acciones"
        android:text="Eliminar"
        app:layout_constraintEnd_toStartOf="@+id/btn_agregar_Menu"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/lbl_MenuTitulo"
        android:layout_width="365dp"
        android:layout_height="57dp"
        android:layout_marginTop="148dp"
        android:text="Menu de acciones"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="34sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>